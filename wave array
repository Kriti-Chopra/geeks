// Function to convert given array to wave like array
// arr: input array
// n: size of array
void convertToWave(int *arr, int n){
    
    // Your code here
    //just swap adjacent elements
    for(int i=0;i<n-1;i=i+2){
        int t=arr[i];
        arr[i]=arr[i+1];
        arr[i+1]=t;
    }
    
}
